<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foodpad_background_light"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/foodpadLogoLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="64dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/foodpadLogoIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/foodpad_logo_yellow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tagLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="32dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/foodpadLogoLL">

        <TextView
            android:id="@+id/tagTV"
            android:layout_width="312dp"
            android:layout_height="162dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Share your food with the rest of the world"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="84dp"
        app:layout_constraintTop_toBottomOf="@id/tagLL">

        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="328dp"
            android:layout_height="53dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/poppins"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="24dp"
            app:backgroundTint="@color/primary_yellow" />

        <Button
            android:id="@+id/logInBtn"
            android:layout_width="328dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/poppins"
            android:text="Log in"
            android:textAllCaps="false"
            android:textSize="24dp"
            app:backgroundTint="@color/white"
            app:cornerRadius="20dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>